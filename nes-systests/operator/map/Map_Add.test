# name: map/Map_Add.test
# description: Simple map tests with an add function
# groups: [Map]

Source stream UINT64 id UINT64 value UINT64 timestamp
1,1,1000
2,1,1001
3,1,1002
4,2,2000
5,19,19000
6,20,20000
7,21,21000

SINK streamSink UINT64 stream$id UINT64 stream$value UINT64 stream$timestamp
SINK streamSinkWithNew UINT64 stream$id UINT64 stream$value UINT64 stream$timestamp UINT64 stream$new
SINK streamSinkWithNew2 UINT64 stream$id UINT64 stream$value UINT64 stream$timestamp UINT64 stream$new UINT64 stream$new2
SINK sinkOnlyIdAndNew2 UINT64 stream$new2 UINT64 stream$id

# Map with add function touches one field
SELECT id + 1 AS id, value, timestamp FROM stream INTO streamSink
----
2,1,1000
3,1,1001
4,1,1002
5,2,2000
6,19,19000
7,20,20000
8,21,21000

# Map with add function touches two fields
SELECT id + value AS id, value, timestamp FROM stream INTO streamSink
----
2,1,1000
3,1,1001
4,1,1002
6,2,2000
24,19,19000
26,20,20000
28,21,21000

# Map with add function touches two fields and adds a new field
SELECT id, value, timestamp, id + value AS new FROM stream INTO streamSinkWithNew
----
1,1,1000,2
2,1,1001,3
3,1,1002,4
4,2,2000,6
5,19,19000,24
6,20,20000,26
