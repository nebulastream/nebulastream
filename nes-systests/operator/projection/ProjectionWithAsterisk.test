# name: projection/ProjectionWithAsterisk.test
# description: Projections using the Asterisk
# groups: [Projection]

CREATE LOGICAL SOURCE stream(id UINT64 NOT NULL, value UINT64 NOT NULL, timestamp UINT64 NOT NULL);
CREATE PHYSICAL SOURCE FOR stream TYPE File;
ATTACH INLINE
1,1,1000
2,1,1001
3,1,1002
4,2,2000
5,19,19000
6,20,20000
7,21,21000

# Notice the missing schema qualification on `new_id` as it does not originate from the source schema
CREATE SINK allWithId(stream.id UINT64 NOT NULL, stream.value UINT64 NOT NULL, stream.timestamp UINT64 NOT NULL, new_id UINT64 NOT NULL)  TYPE File;

# Systest currently does not allow duplicate field names in the result schema. TODO #1002
# This is why every test has to rename the identifier

SELECT *, id as new_id  FROM stream INTO allWithId;
----
1,1,1000,1
2,1,1001,2
3,1,1002,3
4,2,2000,4
5,19,19000,5
6,20,20000,6
7,21,21000,7

SELECT *, id * UINT64(2) as new_id  FROM stream INTO allWithId;
----
1,1,1000,2
2,1,1001,4
3,1,1002,6
4,2,2000,8
5,19,19000,10
6,20,20000,12
7,21,21000,14

SELECT * FROM (SELECT *, id * UINT64(2) as new_id  FROM stream) INTO allWithId;
----
1,1,1000,2
2,1,1001,4
3,1,1002,6
4,2,2000,8
5,19,19000,10
6,20,20000,12
7,21,21000,14
