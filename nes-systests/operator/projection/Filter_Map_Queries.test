# name: milestone/Filter_Map_Queries.test
# description: Simple tests that contain map and filter
# groups: [Filter, Map]


# Logical Source name (and schema definition)
Source stream INT64 id INT64 value UINT64 timestamp

# Attach File TESTDATA/config/csv/default.csv stream INLINE
Attach File stream INLINE
1,1,1000
2,1,1001
3,11,1002
4,412,2000
5,312,2012
6,22,2021

SINK sinkIdx3ValueTimeStamp INT64 stream$id_x_3 INT64 stream$value UINT64 stream$timestamp
SINK sinkIdNewValueNewTimeStamp INT64 stream$id_new INT64 stream$value_new UINT64 stream$timestamp

# Filter and then map
SELECT id * UINT32(3) AS id_x_3, value, timestamp FROM stream WHERE value != UINT32(1) INTO sinkIdx3ValueTimeStamp
----
9,11,1002
12,412,2000
15,312,2012
18,22,2021

# Filter, Map and then Filter again
SELECT id_x_3, value, timestamp FROM
    (SELECT id * UINT32(3) AS id_x_3, value, timestamp FROM stream WHERE value != UINT32(1))
WHERE id_x_3 != UINT32(9) AND value != UINT32(312) INTO sinkIdx3ValueTimeStamp
----
12,412,2000
18,22,2021

