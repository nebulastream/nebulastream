# name: guide/guide2.test
# description: Simple selection tests with variable sized data
# groups: [Selection]

CREATE LOGICAL SOURCE s(t VARSIZED);
CREATE PHYSICAL SOURCE FOR s TYPE File;
ATTACH INLINE
sometext
othertext
sometext
anothertext
sometext
SOMETEXT
some text
sometext
random
sometext

CREATE SINK string_sink(`S$T` VARSIZED) TYPE File;

SELECT * FROM s
WHERE t == VARSIZED("sometext")
INTO string_sink;
----
sometext
sometext
sometext
sometext
sometext
