{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "condition": {
        "type": "notEquals",
        "lhs": "$env{VCPKG_ROOT}",
        "rhs": ""
      },
      "environment": {
        "MOLD_JOBS": "1"
      },
      "cacheVariables": {
        "USE_LOCAL_MLIR": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ExternalData_OBJECT_STORES": "/test-file-cache"
      }
    },

    {
      "name": "debug-none-libcxx",
      "displayName": "Debug Devcontainer (none/libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-none-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PREFIX_PATH": "/clang-none-libcxx"
      }
    },
    {
      "name": "debug-address-libcxx",
      "displayName": "Debug Devcontainer (asan/libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-address-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "address",
        "CMAKE_PREFIX_PATH": "/clang-address-libcxx"
      }
    },
    {
      "name": "debug-thread-libcxx",
      "displayName": "Debug Devcontainer (tsan/libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-thread-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "thread",
        "CMAKE_PREFIX_PATH": "/clang-thread-libcxx"
      }
    },
    {
      "name": "debug-undefined-libcxx",
      "displayName": "Debug Devcontainer (ubsan/libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-undefined-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "undefined",
        "CMAKE_PREFIX_PATH": "/clang-undefined-libcxx"
      }
    },

    {
      "name": "debug-none-local",
      "displayName": "Debug Devcontainer (none/libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-none-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-none-local"
      }
    },
    {
      "name": "debug-address-local",
      "displayName": "Debug Devcontainer (asan/libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-address-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "address",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-address-local"
      }
    },
    {
      "name": "debug-thread-local",
      "displayName": "Debug Devcontainer (tsan/libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-thread-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "thread",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-thread-local"
      }
    },
    {
      "name": "debug-undefined-local",
      "displayName": "Debug Devcontainer (ubsan/libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-debug-undefined-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SANITIZER": "undefined",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-undefined-local"
      }
    },

    {
      "name": "release-none-libcxx",
      "displayName": "Release Devcontainer (libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-release-none-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LARGE_TESTS": "ON",
        "CMAKE_PREFIX_PATH": "/clang-none-libcxx"
      }
    },
    {
      "name": "release-none-local",
      "displayName": "Release Devcontainer (libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-release-none-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LARGE_TESTS": "ON",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-none-local"
      }
    },

    {
      "name": "relwithdebinfo-none-libcxx",
      "displayName": "RelWithDebInfo Devcontainer (libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-relwithdebinfo-none-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_LARGE_TESTS": "ON",
        "CMAKE_PREFIX_PATH": "/clang-none-libcxx"
      }
    },
    {
      "name": "relwithdebinfo-none-local",
      "displayName": "RelWithDebInfo Devcontainer (libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-relwithdebinfo-none-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_LARGE_TESTS": "ON",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-none-local"
      }
    },

    {
      "name": "benchmark-none-libcxx",
      "displayName": "Benchmark Devcontainer (libc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-benchmark-none-libcxx",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LARGE_TESTS": "ON",
        "CMAKE_PREFIX_PATH": "/clang-none-libcxx"
      }
    },
    {
      "name": "benchmark-none-local",
      "displayName": "Benchmark Devcontainer (libstdc++)",
      "inherits": "vcpkg-base",
      "binaryDir": "${sourceDir}/cmake-build-benchmark-none-local",
      "condition": {
        "type": "equals",
        "lhs": "$env{NES_ARCH}",
        "rhs": "amd64"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_LARGE_TESTS": "ON",
        "USE_LIBCXX_IF_AVAILABLE": "OFF",
        "CMAKE_PREFIX_PATH": "/clang-none-local"
      }
    },

    { "name": "debug",          "displayName": "Debug Devcontainer",          "inherits": "debug-none-libcxx" },
    { "name": "debug-asan",     "displayName": "Debug Devcontainer (asan)",    "inherits": "debug-address-libcxx" },
    { "name": "debug-tsan",     "displayName": "Debug Devcontainer (tsan)",    "inherits": "debug-thread-libcxx" },
    { "name": "debug-ubsan",    "displayName": "Debug Devcontainer (ubsan)",   "inherits": "debug-undefined-libcxx" },
    { "name": "release",        "displayName": "Release Devcontainer",         "inherits": "release-none-libcxx" },
    { "name": "relwithdebinfo", "displayName": "RelWithDebInfo Devcontainer",  "inherits": "relwithdebinfo-none-libcxx" },
    { "name": "benchmark",      "displayName": "Benchmark Devcontainer",       "inherits": "benchmark-none-libcxx" }
  ],

  "buildPresets": [
    { "name": "debug-none-libcxx",          "configurePreset": "debug-none-libcxx" },
    { "name": "debug-address-libcxx",       "configurePreset": "debug-address-libcxx" },
    { "name": "debug-thread-libcxx",        "configurePreset": "debug-thread-libcxx" },
    { "name": "debug-undefined-libcxx",     "configurePreset": "debug-undefined-libcxx" },
    { "name": "debug-none-local",           "configurePreset": "debug-none-local" },
    { "name": "debug-address-local",        "configurePreset": "debug-address-local" },
    { "name": "debug-thread-local",         "configurePreset": "debug-thread-local" },
    { "name": "debug-undefined-local",      "configurePreset": "debug-undefined-local" },
    { "name": "release-none-libcxx",        "configurePreset": "release-none-libcxx" },
    { "name": "release-none-local",         "configurePreset": "release-none-local" },
    { "name": "relwithdebinfo-none-libcxx", "configurePreset": "relwithdebinfo-none-libcxx" },
    { "name": "relwithdebinfo-none-local",  "configurePreset": "relwithdebinfo-none-local" },
    { "name": "benchmark-none-libcxx",      "configurePreset": "benchmark-none-libcxx" },
    { "name": "benchmark-none-local",       "configurePreset": "benchmark-none-local" },
    { "name": "debug",                      "configurePreset": "debug" },
    { "name": "debug-asan",                 "configurePreset": "debug-asan" },
    { "name": "debug-tsan",                 "configurePreset": "debug-tsan" },
    { "name": "debug-ubsan",                "configurePreset": "debug-ubsan" },
    { "name": "release",                    "configurePreset": "release" },
    { "name": "relwithdebinfo",             "configurePreset": "relwithdebinfo" },
    { "name": "benchmark",                  "configurePreset": "benchmark" }
  ],

  "testPresets": [
    { "name": "debug-none-libcxx",          "configurePreset": "debug-none-libcxx" },
    { "name": "debug-address-libcxx",       "configurePreset": "debug-address-libcxx" },
    { "name": "debug-thread-libcxx",        "configurePreset": "debug-thread-libcxx" },
    { "name": "debug-undefined-libcxx",     "configurePreset": "debug-undefined-libcxx" },
    { "name": "debug-none-local",           "configurePreset": "debug-none-local" },
    { "name": "debug-address-local",        "configurePreset": "debug-address-local" },
    { "name": "debug-thread-local",         "configurePreset": "debug-thread-local" },
    { "name": "debug-undefined-local",      "configurePreset": "debug-undefined-local" },
    { "name": "release-none-libcxx",        "configurePreset": "release-none-libcxx" },
    { "name": "release-none-local",         "configurePreset": "release-none-local" },
    { "name": "relwithdebinfo-none-libcxx", "configurePreset": "relwithdebinfo-none-libcxx" },
    { "name": "relwithdebinfo-none-local",  "configurePreset": "relwithdebinfo-none-local" },
    { "name": "benchmark-none-libcxx",      "configurePreset": "benchmark-none-libcxx" },
    { "name": "benchmark-none-local",       "configurePreset": "benchmark-none-local" },
    { "name": "debug",                      "configurePreset": "debug" },
    { "name": "debug-asan",                 "configurePreset": "debug-asan" },
    { "name": "debug-tsan",                 "configurePreset": "debug-tsan" },
    { "name": "debug-ubsan",                "configurePreset": "debug-ubsan" },
    { "name": "release",                    "configurePreset": "release" },
    { "name": "relwithdebinfo",             "configurePreset": "relwithdebinfo" },
    { "name": "benchmark",                  "configurePreset": "benchmark" }
  ]
}
